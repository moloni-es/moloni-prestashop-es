            </div>
            <div class="form-group">
                <div>
                    {{ form_label(settingsForm.Payment) }}
                    {{ form_errors(settingsForm.Payment) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(settingsForm.Payment) }}
                </div>
            </div>
            {{ form_row(settingsForm.SaveChanges) }}
            {{ form_end(settingsForm) }}
        </div>
    </div>
