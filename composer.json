{
  "name": "moloni/molonies",
  "description": "Module for Prestashop integration",
  "type": "prestashop-module",
  "license": "https://creativecommons.org/licenses/by-nd/4.0/",
  "authors": [
    {
      "name": "Moloni EspaÃ±a",
      "email": "plugins@moloni.com"
    }
  ],
  "scripts": {
    "check-phpstan": "php vendor/bin/phpstan analyse --configuration=tests/phpstan/phpstan.neon --memory-limit 10G",
    "check-phpcs": "vendor/bin/php-cs-fixer fix -vv",
    "auto-header": "php vendor/bin/header-stamp --license=assets/afl.txt --exclude=vendor,node_modules",
    "post-install-cmd": [
      "php -r \"copy('config/pre-commit', '.git/hooks/pre-commit');\""
    ],
    "post-update-cmd": [
      "php -r \"copy('config/pre-commit', '.git/hooks/pre-commit');\""
    ]
  },
  "minimum-stability": "stable",
  "require-dev": {
    "prestashop/php-dev-tools": "^4.2",
    "phpstan/phpstan": "^1.5",
    "phpunit/phpunit": "5.x",
    "friendsofphp/php-cs-fixer": "^3.8"
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    }
  },
  "autoload": {
    "psr-4": {
      "Moloni\\": "src/"
    }
  },
  "require": {
    "php": ">=7.2",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "extra": {}
}
