{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">shopping_basket</i>
            {{ 'Pending orders'|trans({}, 'Modules.Molonies.Common') }}
        </h3>

        <div class="card-block overflow-auto">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">{{ 'Date'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col">{{ 'Reference'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col">{{ 'Customer'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col">{{ 'E-mail'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col">{{ 'Status'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col" class="text-right">
                        {{ 'Amount'|trans({}, 'Modules.Molonies.Common') }}
                    </th>
                    <th scope="col" class="text-center">
                        {{ 'Document Type'|trans({}, 'Modules.Molonies.Common') }}
                    </th>
                    <th scope="col" class="text-center">
                        {{ 'Actions'|trans({}, 'Modules.Molonies.Common') }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% if orderArray %}
                    {% for order in orderArray %}
                        <tr>
                            <form action="{{ path(createDocumentRoute) }}" method="post">
                                <input type="hidden" name="order_id" value="{{ order.id_order }}">
                                <input type="hidden" name="page" value="{{ paginator.currentPage }}">
                                <td>{{ order.date_add }}</td>
                                <td>{{ order.reference }}</td>
                                <td>{{ order.firstname }} {{ order.lastname }}</td>
                                <td>{{ order.email }}</td>
                                <td>{{ order.state_name }}</td>
                                <td class="text-right">
                                    {{ order.total_paid_tax_incl|number_format(2, '.', ',') }}{{ order.currency }}
                                </td>
                                <td class="text-center">
                                    <select name="document_type">
                                        {% for typeName,typeId in documetTypes %}
                                            <option value='{{ typeId }}' {% if documentType == typeId %} selected {% endif %}>
                                                {{ typeName|trans({}, 'Modules.Molonies.Common') }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-primary" onclick="this.form.submit();">
                                            <i class="material-icons">article</i>
                                            {{ 'Create document'|trans({}, 'Modules.Molonies.Common') }}
                                        </button>

                                        <button type="button"
                                                class="btn btn-sm btn-primary dropdown-toggle dropdown-toggle-split"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>

                                        <div class="dropdown-menu menu-sm">
                                            <a class="dropdown-item" href="{{ order.view_url }}" target="_blank">
                                                <i class="material-icons">open_in_new</i>

                                                {{ 'View order'|trans({}, 'Modules.Molonies.Common') }}
                                            </a>
                                            <a class="dropdown-item"
                                               href="{{ path(discardOrderRoute, {id: order.id_order, page: paginator.currentPage}) }}">
                                                <i class="material-icons">remove_circle</i>

                                                {{ 'Discard order'|trans({}, 'Modules.Molonies.Common') }}
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </form>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8">
                            {{ 'No information to show!'|trans({}, 'Modules.Molonies.Common') }}
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>

            {% include '@Modules/molonies/views/templates/admin/components/Paginator.twig' %}
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <a href="{{ path(thisRoute, {page: paginator.currentPage}) }}" class="btn btn-outline-secondary">
                    {{ 'Refresh list'|trans({}, 'Modules.Molonies.Common') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            window.moloniOrders.startObservers();
        });
    </script>
{% endblock %}
