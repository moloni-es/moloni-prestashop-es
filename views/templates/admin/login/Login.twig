{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <div class="card loginForm">
        <div class="card-header">
            <a href="https://www.moloni.es/" target="_blank">
                <img src="{{ img }}" alt="Logo" style="position:relative; width: 230px; margin-bottom: 5px;margin-left: 10px; margin-top: 5px;">
            </a>
        </div>
        <div>
                {{ form_label(form.developerID) }}
            <div class="loginInputText">
                {{ form_widget(form.developerID) }}
            </div>
                {{ form_label(form.clientSecret) }}
            <div class="loginInputText">
                {{ form_widget(form.clientSecret) }}
            </div>
        </div>
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="card-footer">
            <span style="display: inline;">
                {{ form_widget(form.connect) }}
            </span>
            <span style="display: inline; margin-left: 10px;">
                {{ form_widget(form.reset) }}
            </span>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('themes/new-theme/public/cms_page_form.bundle.js') }}"></script>
{% endblock %}
