<div class="modal fade"
     id="export_products_modal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'Export products'|trans({}, 'Modules.Molonies.Common') }}
                </h5>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    {{ 'All your prestashop products will be created on your Moloni account if they do not exist.'|trans({}, 'Modules.Molonies.Common') }}
                    <br>
                    {{ 'Please keep this window open until the process finishes.'|trans({}, 'Modules.Molonies.Common') }}
                </p>
                <br>
                <p>
                    {{ 'Are you sure you want to continue? '|trans({}, 'Modules.Molonies.Common') }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-dismiss="modal">
                    {{ 'Close'|trans({}, 'Modules.Molonies.Common') }}
                </button>
                <button class="btn btn-primary"
                        data-dismiss="modal"
                        data-href="{{ path(exportProductsRoute) }}"
                        id="export_products_button">
                    {{ 'Export products'|trans({}, 'Modules.Molonies.Common') }}
                </button>
            </div>
        </div>
    </div>
</div>
