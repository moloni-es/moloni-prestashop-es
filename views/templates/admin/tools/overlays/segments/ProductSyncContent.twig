<div>
    <p>
        {{ 'Total results'|trans({}, 'Modules.Molonies.Common') }}: {{ totalResults }}
    </p>

    {% if hasMore %}
        <div class="progress">
            <div class="progress-bar bg-primary"
                 role="progressbar"
                 style="width: {{ currentPercentage }}%;"
                 aria-valuenow="{{ currentPercentage }}"
                 aria-valuemin="0"
                 aria-valuemax="100">
                25%
            </div>
        </div>

        <p>
            {{ 'Please wait, syncing in progress'|trans({}, 'Modules.Molonies.Common') }}
        </p>
    {% else %}
        <div class="progress">
            <div class="progress-bar bg-success"
                 role="progressbar"
                 style="width: 100%;"
                 aria-valuenow="100"
                 aria-valuemin="0"
                 aria-valuemax="100">
                25%
            </div>
        </div>

        <p>
            {{ 'Process complete'|trans({}, 'Modules.Molonies.Common') }}
        </p>
    {% endif %}
</div>
