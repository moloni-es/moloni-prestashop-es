<div class="modal fade"
     id="import_categories"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'Import categories'|trans({}, 'Modules.Molonies.Common') }}
                </h5>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    {{ 'All your Moloni product categories will be created on your Prestashop store if they do not exist.'|trans({}, 'Modules.Molonies.Common') }}<br>
                    {{ 'Please keep this window open until the process finishes.'|trans({}, 'Modules.Molonies.Common') }}
                </p>
                <p>
                    {{ 'Are you sure you want to continue? '|trans({}, 'Modules.Molonies.Common') }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-dismiss="modal">
                    {{ 'Close'|trans({}, 'Modules.Molonies.Common') }}
                </button>
                <a class="btn btn-primary" href="{{ path(importCategoriesRoute) }}">
                    {{ 'Import categories'|trans({}, 'Modules.Molonies.Common') }}
                </a>
            </div>
        </div>
    </div>
</div>
