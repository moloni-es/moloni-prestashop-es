<button style="display: none;" type="button" data-toggle="modal" data-target="#action_overlay_modal" id="action_overlay_button"></button>

<div class="modal fade"
     id="action_overlay_modal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'Action in progress.'|trans({}, 'Modules.Molonies.Tools') }}
                </h5>
            </div>
            <div class="modal-body">
                <div id="action_overlay_content" style="display: none;"></div>
                <div id="action_overlay_error" style="display: none;">
                    <div class="alert alert-danger" role="alert">
                        <p class="alert-text">
                            {{ 'Something went wrong!'|trans({}, 'Modules.Molonies.Tools') }}
                        </p>
                    </div>
                    <p>
                        {{ 'Please check logs for more information.'|trans({}, 'Modules.Molonies.Tools') }}
                    </p>
                </div>
                <div id="action_overlay_spinner">
                    {{ 'We are processing your request.<br>Please wait until the process finishes!'|trans({}, 'Modules.Molonies.Tools')|raw }}
                    <br>
                    <div class="spinner"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="action_overlay_button"
                        type="button"
                        class="btn btn-outline-secondary"
                        data-dismiss="modal"
                        style="display: none;">
                    {{ 'Close'|trans({}, 'Modules.Molonies.Tools') }}
                </button>
            </div>
        </div>
    </div>
</div>
