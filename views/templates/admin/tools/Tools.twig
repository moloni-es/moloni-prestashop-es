{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">plumbing</i>
            {{ 'Tools'|trans({}, 'Modules.Molonies.Common') }}
        </h3>
        <div class="p-4">
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Import categories from Moloni'|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Import all your categories from Moloni"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_import_categories') }}">
                        <button class="btn btn-outline-primary float-right">{{ 'Import categories'|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Import products from Moloni'|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Import all your products from Moloni"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_import_products') }}">
                        <button class="btn btn-outline-secondary float-right">{{ 'Import products'|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni" style="display: none">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Export translations'|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Export all translations to csv"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_export') }}">
                        <button class="btn btn-outline-secondary float-right">{{ 'Export translations'|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Force stock synchronization'|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Synchronize all product's stocks used in the last 7 days"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_stock_sync') }}">
                        <button class="btn btn-outline-success float-right">{{ 'Force stock synchronization'|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Consult logs"|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Consult logs of this current day"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_open_logs') }}">
                        <button class="btn btn-outline-info float-right">{{ "Consult logs"|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Delete logs"|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "Delete all logs files from previous days"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_delete_logs') }}">
                        <button class="btn btn-outline-secondary float-right">{{ "Delete logs"|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Logout"|trans({}, 'Modules.Molonies.Common') }}</p>
                    <p>
                        <small>{{ "We will keep data referring to documents already issued"|trans({}, 'Modules.Molonies.Common') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_logout') }}">
                        <button class="btn btn-outline-danger float-right">{{ "Logout"|trans({}, 'Modules.Molonies.Common') }}</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#exampleModal"
    >
        Launch demo modal
    </button>

    <!-- Modal -->
    <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                    >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec dui
                        sem, egestas non luctus et, semper sed risus. Etiam vel quam et eros
                        pharetra volutpat. Sed faucibus hendrerit diam vitae hendrerit.
                    </p>
                    <p>
                        Donec mollis pretium ex luctus molestie. Pellentesque imperdiet libero
                        eget metus gravida dictum.
                    </p>
                </div>
                <div class="modal-footer">
                    <button
                            type="button"
                            class="btn btn-outline-secondary"
                            data-dismiss="modal"
                    >
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('themes/new-theme/public/cms_page_form.bundle.js') }}"></script>
{% endblock %}
