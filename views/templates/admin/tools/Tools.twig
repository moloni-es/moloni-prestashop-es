{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">plumbing</i>
            {{ 'Tools'|trans({}, 'Modules.Molonies.Common') }}
        </h3>
        <div class="card-block">
            <div class="d-flex">
                <div>
                    <b>{{ 'Import categories from Moloni'|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "Import all your categories from Moloni"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <button type="button"
                            class="btn btn-primary"
                            data-toggle="modal"
                            data-target="#import_categories">
                        {{ 'Import categories'|trans({}, 'Modules.Molonies.Common') }}
                    </button>
                </div>
            </div>
            <div class="d-flex border-top">
                <div>
                    <b>{{ 'Import products from Moloni'|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "Import all your products from Moloni"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <button type="button"
                            class="btn btn-primary"
                            data-toggle="modal"
                            data-target="#import_products">
                        {{ 'Import products'|trans({}, 'Modules.Molonies.Common') }}
                    </button>
                </div>
            </div>
            <div class="d-flex border-top">
                <div>
                    <b>{{ 'Force stock synchronization'|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "Synchronize all product's stocks used in the last 7 days"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <button type="button"
                            class="btn btn-primary"
                            data-toggle="modal"
                            data-target="#sync_stocks">
                        {{ 'Synchronize stocks'|trans({}, 'Modules.Molonies.Common') }}
                    </button>
                </div>
            </div>
            <div class="d-flex border-top">
                <div>
                    <b>{{ 'Reinstall webhooks'|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "Reinstall webhooks on Moloni account"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <a class="btn btn-primary" href="{{ path(reinstallHooksRoute) }}">
                        {{ 'Reinstall webhooks'|trans({}, 'Modules.Molonies.Common') }}
                    </a>
                </div>
            </div>
            <div class="d-flex border-top">
                <div>
                    <b>{{ "Consult logs"|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "Consult plugin logs"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <a class="btn btn-primary" href="{{ path(openLogsRoute) }}">
                        {{ 'View logs'|trans({}, 'Modules.Molonies.Common') }}
                    </a>
                </div>
            </div>
            <div class="d-flex border-top">
                <div>
                    <b>{{ "Logout"|trans({}, 'Modules.Molonies.Common') }}</b>
                    <p class="small-text text-muted">
                        {{ "We will keep data referring to documents already issued"|trans({}, 'Modules.Molonies.Common') }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center ml-auto">
                    <a class="btn btn-danger" href="{{ path(logoutRoute) }}">
                        {{ 'Logout'|trans({}, 'Modules.Molonies.Common') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Import categories Overlay #}
    {% include '@Modules/molonies/views/templates/admin/tools/overlays/CategoryImport.twig' %}

    {# Import products Overlay #}
    {% include '@Modules/molonies/views/templates/admin/tools/overlays/ProductImport.twig' %}

    {# Synchronize stocks Overlay #}
    {% include '@Modules/molonies/views/templates/admin/tools/overlays/SyncStocks.twig' %}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            console.log('Moloni tools page loaded');

            window.moloniTools.startObservers();
        });
    </script>
{% endblock %}
