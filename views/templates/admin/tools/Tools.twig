{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <div>
            <h3 class="card-header">{{ 'AREA - TOOLS'|trans({}, 'Modules.Molonies.Settings') }}</h3>
            <br>
        </div>
        <div class="p-4">
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Import categories from Moloni'|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Import all your categories from Moloni"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_import_categories') }}">
                        <button class="btn btn-outline-primary float-right">{{ 'Import categories'|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Import products from Moloni'|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Import all your products from Moloni"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_import_products') }}">
                        <button class="btn btn-outline-secondary float-right">{{ 'Import products'|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni" style="display: none">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Export translations'|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Export all translations to csv"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_export') }}">
                        <button class="btn btn-outline-secondary float-right">{{ 'Export translations'|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Force stock synchronization'|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Synchronize all product's stocks used in the last 7 days"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_force') }}">
                        <button class="btn btn-outline-success float-right">{{ 'Force stock synchronization'|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ 'Clean pending orders'|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Remove all orders from order's list"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_discard_all_orders') }}">
                        <button class="btn btn-outline-warning float-right">{{ 'Clean pending orders'|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Consult logs"|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Consult logs of this current day"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_open_logs') }}">
                        <button class="btn btn-outline-info float-right">{{ "Consult logs"|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Delete logs"|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "Delete all logs files from previous days"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_delete_logs') }}">
                        <button class="btn btn-outline-secondary float-right">{{ "Delete logs"|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
            <div class="row p-4 borderMoloni">
                <div class="col-6">
                    <p class="font-weight-bold labelPS">{{ "Logout"|trans({}, 'Modules.Molonies.Settings') }}</p>
                    <p>
                        <small>{{ "We will keep data referring to documents already issued"|trans({}, 'Modules.Molonies.Settings') }}</small>
                    </p>
                </div>
                <div class="col-6">
                    <a href="{{ path('moloni_es_tools_logout') }}">
                        <button class="btn btn-outline-danger float-right">{{ "Logout"|trans({}, 'Modules.Molonies.Settings') }}</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('themes/new-theme/public/cms_page_form.bundle.js') }}"></script>
{% endblock %}
