<nav aria-label="navigation">
    <ul class="pagination justify-content-center mt-2">
        <li class="page-item {% if paginator.currentPage|default(1) == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{ path(thisRoute, {page: 1}) }}">1</a>
        </li>
        <li class="page-item previous {% if paginator.currentPage|default(1) == 1 %} disabled {% endif %}">
            <a class="page-link"
               aria-label="Previous"
               href="{{ path(thisRoute, {page: (paginator.currentPage|default(1) - 1)}) }}">
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item active">
            <input
                    name="moloni_paginator"
                    class="jump-to-page"
                    type="text"
                    value="{{ paginator.currentPage|default(1) }}"
                    psurl="{{ path(thisRoute) }}"
                    psmax="{{ paginator.numberOfPages|default(1) }}"
            />
        </li>
        <li class="page-item next {% if paginator.currentPage|default(1) == paginator.numberOfPages|default(1) %} disabled {% endif %}">
            <a class="page-link"
               aria-label="Next"
               id="pagination_next_url"
               href="{{ path(thisRoute, {page: (paginator.currentPage|default(1) + 1)}) }}">
                <span class="sr-only">Next</span>
            </a>
        </li>
        <li class="page-item {% if paginator.currentPage|default(1) == paginator.numberOfPages|default(1) %} disabled {% endif %}">
            <a class="page-link" href="{{ path(thisRoute, {page: paginator.numberOfPages|default(1)}) }}">
                {{ paginator.numberOfPages|default(1) }}
            </a>
        </li>
    </ul>
</nav>
