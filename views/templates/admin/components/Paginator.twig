<nav aria-label="navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item {% if paginator.currentPage == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{ path(thisRoute, {page: 1}) }}">1</a>
        </li>
        <li class="page-item previous {% if paginator.currentPage == 1 %} disabled {% endif %}">
            <a class="page-link"
               aria-label="Previous"
               href="{{ path(thisRoute, {page: (paginator.currentPage-1)}) }}">
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item active">
            <input
                    name="paginator_jump_page"
                    class="jump-to-page"
                    type="text"
                    value="{{ paginator.currentPage }}"
                    psurl="{{ path(thisRoute, {page: paginator.currentPage}) }}"
                    psmax="{{ paginator.numberOfTabs }}"
            />
        </li>
        <li class="page-item next {% if paginator.currentPage == paginator.numberOfTabs %} disabled {% endif %}">
            <a class="page-link"
               aria-label="Next"
               id="pagination_next_url"
               href="{{ path(thisRoute, {page: (paginator.currentPage+1)}) }}">
                <span class="sr-only">Next</span>
            </a>
        </li>
        <li class="page-item {% if paginator.currentPage == paginator.numberOfTabs %} disabled {% endif %}">
            <a class="page-link" href="{{ path(thisRoute, {page: paginator.numberOfTabs}) }}">
                {{ paginator.numberOfTabs }}
            </a>
        </li>
    </ul>
</nav>
