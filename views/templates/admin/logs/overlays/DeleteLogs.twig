<div class="modal fade"
     id="delete_logs"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'Delete older logs'|trans({}, 'Modules.Molonies.Common') }}
                </h5>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    {{ 'This action will delete all logs with more than one week.'|trans({}, 'Modules.Molonies.Common') }}
                </p>
                <p>
                    {{ 'Do you wish to continue?'|trans({}, 'Modules.Molonies.Common') }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-dismiss="modal">
                    {{ 'Cancel'|trans({}, 'Modules.Molonies.Common') }}
                </button>
                <a class="btn btn-danger" href="{{ path(deleteLogsRoute) }}">
                    {{ 'Delete'|trans({}, 'Modules.Molonies.Common') }}
                </a>
            </div>
        </div>
    </div>
</div>
