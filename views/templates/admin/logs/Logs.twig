{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">developer_mode</i>
            {{ 'Logs'|trans({}, 'Modules.Molonies.Common') }}
        </h3>
        <div class="card-block overflow-auto">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">{{ 'Date'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col" class="text-center">
                        {{ 'Type'|trans({}, 'Modules.Molonies.Common') }}
                    </th>
                    <th scope="col">{{ 'Message'|trans({}, 'Modules.Molonies.Common') }}</th>
                    <th scope="col" class="text-center">
                        {{ 'Payload'|trans({}, 'Modules.Molonies.Common') }}
                    </th>
                </tr>
                </thead>
                <tbody>

                {% if logs %}
                    {% for log in logs %}
                        <tr>
                            <td>
                                {{ log.created_at|date("Y-m-d H:i:s")}}
                            </td>
                            <td class="text-center">
                                {% if log.level == constant('Moloni\\Enums\\LogLevel::INFO') %}
                                    <span class="badge badge-info">
                                        {{ 'Information'|trans({}, 'Modules.Molonies.Common') }}
                                    </span>
                                {% elseif log.level == constant('Moloni\\Enums\\LogLevel::WARNING') %}
                                    <span class="badge badge-warning">
                                        {{ 'Warning'|trans({}, 'Modules.Molonies.Common') }}
                                    </span>
                                {% elseif log.level == constant('Moloni\\Enums\\LogLevel::ERROR') %}
                                    <span class="badge badge-danger">
                                        {{ 'Error'|trans({}, 'Modules.Molonies.Common') }}
                                    </span>
                                {% else %}
                                    ---
                                {% endif %}
                            </td>
                            <td>
                                {% for message in log.message %}
                                    {% if message[1] %}
                                        {% set foo = {} %}

                                        {% for key, value in message[1] %}
                                            {% set foo = foo|merge({(key): value}) %}
                                        {% endfor %}

                                        {{ message[0]|trans(foo, 'Modules.Molonies.Common') }}
                                    {% else %}
                                        {{ message[0]|trans({}, 'Modules.Molonies.Common') }}
                                    {% endif %}
                                    <br>
                                {% endfor %}
                            </td>
                            <td class="text-center">

                                {# Overlay button #}
                                <button type="button"
                                        class="btn btn-outline-secondary btn-sm"
                                        data-toggle="modal"
                                        data-target="#log_{{ log.id }}">
                                    <i class="material-icons">inventory</i>
                                </button>

                                {# Payload Overlay #}
                                {% include '@Modules/molonies/views/templates/admin/logs/overlays/LogPayload.twig' with {'log_id': log.id, 'payload_data': log.extra} %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="100%">
                            {{ 'No information to show!'|trans({}, 'Modules.Molonies.Common') }}
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>

            {# Delete Overlay #}
            {% include '@Modules/molonies/views/templates/admin/logs/overlays/DeleteLogs.twig' %}

            {# Paginator #}
            {% include '@Modules/molonies/views/templates/admin/components/Paginator.twig' %}
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-end">
                {# Delete logs #}
                <button type="button"
                        class="btn btn-danger mr-2"
                        data-toggle="modal"
                        data-target="#delete_logs">
                    {{ 'Delete older logs'|trans({}, 'Modules.Molonies.Common') }}
                </button>

                {# Go to tools #}
                <a href="{{ path(toolsRoute) }}"
                   class="btn btn-primary mr-2">
                    {{ 'Go back'|trans({}, 'Modules.Molonies.Common') }}
                </a>

                {# Refresh list #}
                <a href="{{ path(thisRoute, {page: paginator.currentPage}) }}"
                   class="btn btn-outline-secondary">
                    {{ 'Refresh list'|trans({}, 'Modules.Molonies.Common') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            window.moloniLogs.startObservers();
        });
    </script>
{% endblock %}
